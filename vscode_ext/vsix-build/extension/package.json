{
  "name": "badger",
  "displayName": "Badger - Code Graph Context",
  "description": "Enrich LLM context with semantic code graphs using tree-sitter and Dgraph",
  "publisher": "badger-publisher",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "badger.indexWorkspace",
        "title": "Index Workspace",
        "category": "Badger"
      },
      {
        "command": "badger.parseCurrentFile",
        "title": "Parse Current Python File",
        "category": "Badger"
      },
      {
        "command": "badger.queryContext",
        "title": "Query Code Context",
        "category": "Badger"
      },
      {
        "command": "badger.updateGraph",
        "title": "Update Graph",
        "category": "Badger"
      }
    ],
    "configuration": {
      "title": "Badger",
      "properties": {
        "badger.dgraph.endpoint": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "Dgraph database endpoint URL"
        },
        "badger.treeSitter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable tree-sitter code parsing"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/vsce": "^2.24.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "dgraph-js": "^21.3.0",
    "web-tree-sitter": "^0.25.10"
  }
}
